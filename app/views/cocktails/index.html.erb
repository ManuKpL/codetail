<div class="my-header">
  <h1>Discover all our amazing cocktails!</h1>
  <hr>
</div>
<div class="bg bg-white bg-shadowed container padded">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4 text-center">
        <div class="card" style="background-image: url(<%= cocktail.picture || "https://unsplash.it/600/400?random" %>)">
          <div class="card-bg"></div>
          <div class="card-content">
            <%= link_to cocktail_path(cocktail), class:"btn btn-primary btn-lg" do %>
              <%= cocktail.name.capitalize %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="text-center">
  <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-success" %>
</div>
